<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="1"
    android:background="@color/colorFondo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20"
        android:text="0"
        android:textSize="50sp"
        android:gravity="end"
        android:textColor="@color/colorDatos"
        android:id="@+id/testview"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20"
        android:text="0"
        android:textSize="45sp"
        android:gravity="end"
        android:textColor="@color/colorDatos"
        android:id="@+id/edittext"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:text="7"
                    android:textSize="40sp"
                    android:background="@color/colorBoton"
                    android:textColor="@color/colorDatos"
                    android:id="@+id/btnsiete"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:text="8"
                    android:textSize="40sp"
                    android:background="@color/colorBoton"
                    android:textColor="@color/colorDatos"
                    android:id="@+id/btnocho"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:text="9"
                    android:textSize="40sp"
                    android:background="@color/colorBoton"
                    android:textColor="@color/colorDatos"
                    android:id="@+id/btnnueve"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:text="4"
                    android:textSize="40sp"
                    android:background="@color/colorBoton"
                    android:textColor="@color/colorDatos"
                    android:id="@+id/btncuatro"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:text="5"
                    android:textSize="40sp"
                    android:background="@color/colorBoton"
                    android:textColor="@color/colorDatos"
                    android:id="@+id/btncinco"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:text="6"
                    android:textSize="40sp"
                    android:background="@color/colorBoton"
                    android:textColor="@color/colorDatos"
                    android:id="@+id/btnseis"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:text="1"
                    android:textSize="40sp"
                    android:background="@color/colorBoton"
                    android:textColor="@color/colorDatos"
                    android:id="@+id/btnuno"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:text="2"
                    android:textSize="40sp"
                    android:background="@color/colorBoton"
                    android:textColor="@color/colorDatos"
                    android:id="@+id/btndos"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:text="3"
                    android:textSize="40sp"
                    android:background="@color/colorBoton"
                    android:textColor="@color/colorDatos"
                    android:id="@+id/btntres"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:text="0"
                    android:textSize="40sp"
                    android:background="@color/colorBoton"
                    android:textColor="@color/colorDatos"
                    android:id="@+id/btncero"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:text="="
                    android:textSize="40sp"
                    android:background="@color/colorBoton"
                    android:textColor="@color/colorDatos"
                    android:id="@+id/btnresultado"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="C"
                android:textSize="25sp"
                android:background="@color/colorBoton2"
                android:textColor="@color/colorDatos"
                android:id="@+id/btnborrar"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="/"
                android:textSize="25sp"
                android:background="@color/colorBoton2"
                android:textColor="@color/colorDatos"
                android:id="@+id/btndividir"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="x"
                android:textSize="25sp"
                android:background="@color/colorBoton2"
                android:textColor="@color/colorDatos"
                android:id="@+id/btnmultiplicar"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="-"
                android:textSize="25sp"
                android:background="@color/colorBoton2"
                android:textColor="@color/colorDatos"
                android:id="@+id/btnrestar"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="+"
                android:textSize="25sp"
                android:background="@color/colorBoton2"
                android:textColor="@color/colorDatos"
                android:id="@+id/btnsumar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="sin"
                android:textSize="25sp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorDatos"
                android:id="@+id/btnsin"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="cos"
                android:textSize="25sp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorDatos"
                android:id="@+id/btncos"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="tan"
                android:textSize="25sp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorDatos"
                android:id="@+id/btntan"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="ln"
                android:textSize="25sp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorDatos"
                android:id="@+id/btnln"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="Ï€"
                android:textSize="25sp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorDatos"
                android:id="@+id/btnpi"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
